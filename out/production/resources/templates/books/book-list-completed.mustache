{{>layout/header}}

{{>books/book-body-base}}

<div class="col-md-12">

    <!--상단-->
    <div class="row justify-content-between align-items-center m-2">

        <!--메뉴-->
        <ul class="nav nav-pills nav-fill">
            <li class="nav-item">
                <a class="nav-link" href="/books/readingList">읽는 중</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/books/plannedList">읽을 예정</a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" href="/books/completedList">읽은</a>
            </li>
        </ul>

        <!--책추가-->
        <a href="#" class="btn btn-info">책 추가</a>
    </div>

    <br>

    <!--책 목록 -->
    <table class="table">
        <col width="10"/>
        <col width="15%"/>
        <col width="15%"/>
        <col width="50%"/>
        <col width="20%"/>
        <thead>
            <tr>
                <th>Id</th>
                <th>시작</th>
                <th>안료</th>
                <th>제목</th>
                <th>저자</th>
            </tr>
        </thead>
        <tbody id="tbody">
        {{#books}}
            <tr>
                <td>{{id}}</td>
                <td>{{readStartText}}</td>
                <td>{{readEndText}}</td>
                <td><a href="/book/{{id}}">{{name}}</td>
                <td>{{author}}</td>
            </tr>
        {{/books}}
        </tbody>
    </table>

</div>

{{>layout/footer}}