{{>layout/header}}

{{>books/book-body-base}}

<div class="col-md-12">
    <h5>책 추가하기</h5>
    <br>
    <form role="form" action="/b" method="post">
        <div class="form-group">
            <label for="title">책 제목</label>
            <input type="text" class="form-control" id="name" placeholder="책 제목을 입력하세요">
        </div>
        <div class="form-group">
            <label for="author">저자</label>
            <input type="text" class="form-control" id="author" placeholder="저자를 입력하세요">
        </div>
        <div class="form-group">
            <label for="content">ISBN</label>
            <input class="form-control" id="isbn" placeholder="ISBN을 입력하세요">
        </div>

        <a href="/" role="button" class="btn btn-secondary">취소</a>
        <button type="submit" class="btn btn-primary" id="btn-save">등록</button>
    </form>

</div>

{{>layout/footer}}